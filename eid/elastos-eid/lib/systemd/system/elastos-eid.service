[Unit]
Description=Elastos ID(EID) Sidechain Service
After=network-online.target

[Service]
Type=simple
StandardOutput=null
StandardError=null
WorkingDirectory=/data/elastos/eid
EnvironmentFile=/etc/elastos-eid/params.env
ExecStart=/usr/local/bin/elastos-eid     \
            --datadir ${DATADIR}          \
            --mine --miner.threads 1      \
            --rpc --rpcvhosts '*' --rpcaddr '0.0.0.0'           \
            --rpcport ${RPCPORT}                                \
            --rpcapi 'personal,db,eth,net,web3,txpool,miner'    \
            --unlock  ${UNLOCK_ADDRESS}                         \
            --password ${MINER_PASSWORD_FILE}                   \
            --pbft.keystore.password ${KEYSTORE_PASSWORD_FILE}  \
            --pbft.net.address ${IPADDRESS}                     \
            --pbft.net.port 20649                               \
            --syncmode "full" \
            --allow-insecure-unlock
            
User=elauser
Group=elauser
Restart=always

[Install]
WantedBy=multi-user.target