#!/bin/sh

adduser --system \
        --quiet \
        --group \
        --no-create-home \
        --disabled-password \
        --home /data/elastos \
        elauser

mkdir -p /data/elastos/supernodemetrics
chown -R elauser:elauser /data/elastos/supernodemetrics
systemctl restart prometheus prometheus-node-exporter prometheus-pushgateway prometheus-alertmanager